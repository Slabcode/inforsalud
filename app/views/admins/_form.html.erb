<%= form_for(admin, url: admins_path) do |f| %>
<% if admin.errors.any? %>
<div id="error_explanation">
	<h2><%= t("admins.being_saved",count: admin.errors.count) %> </h2>

	<ul>
		<% admin.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group row">
	<div class="field col-md-6">
		<%= f.text_field :name, placeholder: :name, autofocus: true %>
	</div>
	<div class="field col-md-6">
		<%= f.text_field :lastname, placeholder: :lastname %>
	</div>
	<div class="field col-md-6">
		<%= f.text_field :username, placeholder: :username %>
	</div>
	<div class="field col-md-6">
		<%= f.email_field :email, placeholder: :email %>
	</div>
	<div class="field col-md-6">
		<%= f.password_field :password, placeholder: "Password (6 characters minimum)", autocomplete: "off" %>
	</div>
	<div class="field col-md-6">
		<%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off" %>
	</div>

	<div class="actions">
		<%= f.submit "Registrar administrador" %>
	</div>
</div>
<% end %>
