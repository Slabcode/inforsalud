<p id="notice"><%= notice %></p>

<h1><%= @franchise.name %> </h1>
<p><%= @franchise.address %> </p>
<p><%= @franchise.description %> </p>


<h1>Carrers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Semester number</th>
      <th>Objective</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @carrers.each do |carrer| %>
      <tr>
        <td><%= carrer.name %></td>
        <td><%= carrer.description %></td>
        <td><%= carrer.semester_number %></td>
        <td><%= carrer.objective %></td>

        <td><%= link_to 'Ver semestres', carrer_semesters_path(carrer) %></td>
        <td><%= link_to 'Desenlazar carrera', franchise_carrer_unlink_path(@franchise,carrer), method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'paginate_carrer' %>

