<%= stylesheet_link_tag 'administration', media: 'all', type:"text/css" %>

<%= link_to root_path, :class=>"home" do %>
<%= icon('home') + " " + t("administrator.home") %>
<% end %>

<section class="dashboard container-fluid">
	<div class="items row">
		<div class="action col-md-4">
			<%= link_to new_admin_path, :class=>"item" do %>
			<%= icon('user-plus') + " " + t("admins.new") %>
			<% end %>
		</div>
		<div class="action col-md-4">
			<%= link_to admins_path, :class=>"item" do %>
			<%= icon('users') + " " + t("admins.index") %>
			<% end %>
		</div>
		<div class="action col-md-4">
			<%= link_to franchises_path, :class=>"item" do %>
			<%= icon('building-o') + " " + t("administrator.franchise") %>
			<% end %>
		</div>
		<div class="action col-md-4">
			<%= link_to carrers_path, :class=>"item" do %>
			<%= icon('graduation-cap') %> Carreras
			<% end %>
		</div>
		<div class="action col-md-4">
			<%= link_to edit_admin_registration_path(current_admin), :class=>"item" do %>
			<%= icon('pencil-square-o') + " " + t("administrator.edit") %>
			<% end %>
		</div>
		<div class="action col-md-4">
			<% if !current_admin.authy_enabled %>
				<%= link_to admin_enable_authy_path, :class=>"item" do %>
				<%= icon('plus-square') + " " + t("administrator.two_factor_enable") %>
				<% end %>
			<% else %>
				<%= link_to admin_disable_authy_path, method: :post, :class=>"item" do %>
				<%= icon('minus-square') + " " + t("administrator.two_factor_disable") %>
				<% end %>
			<% end %>
		</div>
	</div>
</section>

<%= link_to destroy_admin_session_path, :class=>"sign_out", method: :delete do %>
<%= icon('sign-out') + " " + t("administrator.sign_out") %>
<% end %>
