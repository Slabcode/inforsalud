<%= stylesheet_link_tag 'admins', media: 'all', type:"text/css" %>

<section class="main">	
	<div class="login">
		<div class="logo">
			<%= image_tag "logo_inforsalud.jpg", :class => "logo img-responsive" %>
		</div>

		<h2 class="title">
			<%= I18n.t('authy_register_title', {:scope => 'devise'}) %>
		</h2>
		
		<%= enable_authy_form do %>
		<div class="field">
			<%= text_field_tag :country_code, '', :autocomplete => :off, :placeholder => I18n.t('devise.country'), :id => "authy-countries"%>
		</div>
		<div class="field">
			<%= text_field_tag :cellphone, '', :autocomplete => :off, :placeholder => I18n.t('devise.cellphone'), :id => "authy-cellphone"%>
		</div>
		<div class="actions">
			<%= submit_tag I18n.t('enable_authy', {:scope => 'devise'}) %>
		</div>
		
		<% end %>

	</div>
</section>