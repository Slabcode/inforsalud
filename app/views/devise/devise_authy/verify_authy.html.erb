<%= stylesheet_link_tag 'admins', media: 'all', type:"text/css" %>

<section class="main">	
	<div class="login">
		<div class="logo">
			<%= image_tag "logo_inforsalud.jpg", :class => "logo img-responsive" %>
		</div>

		<h2 class="title">
			<%= I18n.t('authy_register_title', {:scope => 'devise'}) %>
		</h2>
		
		<%= verify_authy_form do %>
		<div class="form-content">
			<legend><%= I18n.t('submit_token_title', {:scope => 'devise'}) %></legend>
			<%= text_field_tag :token, nil, :autocomplete => :off, :class => "authy-token", :id => 'authy-token' %>
			<div class="gadget row">
				<div class="remember col-md-6">
					<label>
						<%= check_box_tag :remember_device %>
						<span><%= I18n.t('remember_device', {:scope => 'devise'}) %></span>
					</label>
				</div>
				<div class="actions col-md-6">
					<%= authy_request_sms_link :class => 'sms' %>
				</div>
			</div>
			<div class="actions token">
				<%= submit_tag I18n.t('submit_token', {:scope => 'devise'}), :class => 'btn' %>
			</div>
		</div>
		<% end %>
	</div>
</section>
